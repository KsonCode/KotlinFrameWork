<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout		xmlns:android="http://schemas.android.com/apk/res/android"		xmlns:tools="http://schemas.android.com/tools"		xmlns:app="http://schemas.android.com/apk/res-auto"		android:layout_width="match_parent"		android:layout_height="match_parent"		tools:context=".MainActivity">	<LinearLayout android:id="@+id/topLayout" app:layout_constraintTop_toTopOf="parent"	              android:layout_width="match_parent"	              android:layout_height="wrap_content">		<Button				android:id="@+id/login"				android:layout_width="wrap_content"				android:layout_height="wrap_content"				android:text="登录"		/>		<Button				android:id="@+id/getMovies"				android:layout_width="wrap_content"				android:layout_height="wrap_content"				android:text="获取影院列表"		/>	</LinearLayout>	<com.jcodecraeer.xrecyclerview.XRecyclerView			app:layout_constraintTop_toBottomOf="@+id/topLayout"			android:id="@+id/xrv"			android:layout_width="match_parent"			android:layout_height="0dp" /></android.support.constraint.ConstraintLayout>